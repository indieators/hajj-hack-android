<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/eight_dp">
  <LinearLayout
    android:id="@+id/med_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/tv_med_item_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:textSize="18sp"
      tools:text="Ansulin"
      />

    <TextView
      android:id="@+id/tv_med_item_dose"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-medium"
      android:textSize="14sp"
      tools:text="200 mg"
      />

  </LinearLayout>

  <ImageButton
    android:id="@+id/ib_med_item_delete"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_delete"
    android:tint="@color/colorAccent"
    app:layout_constraintBottom_toTopOf="@id/med_info_container"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/med_info_container"
    />

</android.support.constraint.ConstraintLayout>